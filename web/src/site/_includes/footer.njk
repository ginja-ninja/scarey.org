<!-- prettier-ignore -->
{% import "./icons.njk" as Icons %}

<!-- prettier-ignore -->
{% set iconCls = ["flex", "px-2", "w-8", "md:mx-0"] | join(" ") %}

<!-- prettier-ignore -->
{% set formAction =
"//middlewestmgmt.us3.list-manage.com/subscribe/post?u=41155eea0059f0d47081cf8c3&amp;id=12eb6035f7"
%}

<footer class="mt-8">
  <div
    class="container mx-auto flex flex-col md:flex-row justify-between items-center px-4"
  >

    <form
      class="w-full md:max-w-xs mb-2 md:mb-0 py-6"
      action="{{formAction}}"
      method="post"
      name="mc-embedded-subscribe-form"
      id="mc-embedded-subscribe-form"
      target="_blank"
      novalidate
    >
      <div style="position: absolute; left: -5000px;" aria-hidden="true">
        <input
          type="text"
          name="b_41155eea0059f0d47081cf8c3_12eb6035f7"
          tabindex="-1"
          value=""
        />
      </div>
      <p
        class="pl-2 text-xs uppercase tracking-widest font-semibold text-gray-700"
        >Mailing List</p>
      <div class="flex w-full">
      <label
        for="mce-EMAIL"
        class="sr-only"
        >Email Address</label
      >
        <input
          class="flex-1 text-sm pl-2 pr-4 py-1 leading-6 bg-transparent border-b border-gray-600 mailing-list-input"
          id="email"
          id="mce-EMAIL"
          name="EMAIL"
          placeholder="email@example.com"
          type="email"
        />
        <button
          class="hover:text-red-700 transition duration-100 transition-colors text-xs inline-flex items-center justify-center py-1 border border-transparent leading-6 rounded-sm tracking-wide font-medium px-1"
          name="subscribe"
          id="mc-embedded-subscribe"
        >
          <span class="mr-1">
            Subscribe
          </span>
          <span class="w-4 flex hover:text-red-700">
            {{ Icons.ArrowRight() }}
          </span>
        </button>
      </div>
    </form>

    <div
      class="flex flex-row md:flex-col w-full md:w-auto justify-between items-center md:items-end py-4"
    >
      <a href="/" class="opacity-75"
        ><img class="w-16" src="/img/logo-dark-unpadded.png" alt="S. Carey home"
      /></a>
      <div class="flex flex-1 justify-end text-gray-600">
        {{ Icons.Fb(iconCls) }} {{ Icons.Twitter(iconCls) }} {{
        Icons.Ig(iconCls) }}
      </div>
    </div>
  </div>
</footer>
